<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/relaOut1">

           <ImageView
               android:id="@+id/Store_CardView_Image"
               android:layout_width="300dp"
               android:layout_height="300dp"
               android:scaleType="fitCenter"
               android:layout_centerHorizontal="true"
               android:padding="20dp"
               android:adjustViewBounds="true"/>
       </RelativeLayout>
       
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/relaOut2"
           android:layout_below="@id/relaOut1">
           
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/line1"
              android:layout_centerHorizontal="true">
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:background="@drawable/ic_date_range"
                 android:id="@+id/receipt_count_img" />

              <TextView
                  android:id="@+id/receipt_count_txt"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:text="10"
                  android:textSize="16dp"
                  android:gravity="center"

                  />

          </LinearLayout>

           <ImageButton
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:id="@+id/Store_deleteBtn"
               android:layout_toRightOf="@id/line1"
               android:layout_marginStart="30dp"
               android:background="@drawable/ic_delete_forever"
               />
           
           
       </RelativeLayout>


   </RelativeLayout>

</android.support.v7.widget.CardView>